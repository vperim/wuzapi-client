<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>preview</LangVersion>
		<Nullable>enable</Nullable>

		<!-- Package-specific metadata -->
		<PackageId>WuzApiClient</PackageId>
		<Description>A .NET client library for WhatsApp operations via the WuzAPI gateway. Provides strongly-typed HTTP client for sending messages, managing contacts, groups, and channels with railway-oriented error handling.</Description>
		<PackageTags>whatsapp;wuzapi;api;client;messaging;http</PackageTags>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Include="..\WuzApiClient.Common\CompatibilityShim.cs" Link="CompatibilityShim.cs" />
	</ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="WuzApiClient.UnitTests" />
    </ItemGroup>

	<ItemGroup>
		<None Include="..\..\README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Http" Version="8.0.1" />
		<PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="8.0.0" />
		<PackageReference Include="System.Text.Json" Version="8.0.6" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\WuzApiClient.Common\WuzApiClient.Common.csproj" />
	</ItemGroup>

</Project>
